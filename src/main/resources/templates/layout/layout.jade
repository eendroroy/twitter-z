doctype html
html
  head
    include partials/head
    block head
  body
    if current_user
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar")
              span.sr-only
                | Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/")
              | [#{current_user.getUserName()}]
          .collapse.navbar-collapse#navbar
            ul.nav.navbar-nav.navbar-right
              li
                a(href="/user/profile") Profile
              li
                a(href="/user/logout") Sign out
    else
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar")
              span.sr-only
                | Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/")
              | Zombie
          .collapse.navbar-collapse#navbar
            ul.nav.navbar-nav.navbar-right
              li
                a(href="/user/login") Sign in
              li
                a(href="/user/registration") Sign Up
    .container
      .page-header
        .clearfix
          block page_title
      br
      .clearfix
        .container
          block body

    include partials/footer
